{
  "name": "almunnings/php-robot-warehouse",
  "type": "project",
  "authors": [
    {
      "name": "Al Munnings",
      "email": "al.munnings@gmail.com"
    }
  ],
  "require": {
    "monolog/monolog": "^3.5",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "composer/composer": "^2.7",
    "mockery/mockery": "^1.6",
    "phpunit/phpunit": "^9",
    "squizlabs/php_codesniffer": "^3.9",
    "slevomat/coding-standard": "^8.14"
  },
  "autoload": {
    "files": [
      "helpers/env.php",
      "helpers/logger.php"
    ],
    "psr-4": {
      "App\\": "app/",
      "App\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
